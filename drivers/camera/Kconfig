menuconfig CAMERA
	bool "Camera Drivers"
	default y
	help
	  Enable camera drivers

if CAMERA

module = CAMERA
module-str = camera

config CAMERA_DEV_NAME
	string "Device Name of Camera Device"
	default "camera_0"
	help
		This option specifies the name of camera device

source "drivers/camera/Kconfig.csi"

endif
